<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.tv2guitest.SecondaryController">
   <children>
      <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: transparent;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <AnchorPane fx:id="usernameBackground" prefHeight="40.0" style="-fx-background-color: white; -fx-background-radius: 25; -fx-border-radius: 25;" VBox.vgrow="NEVER">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
               <children>
                  <TextField fx:id="usernameText" onAction="#usernameAction" promptText="Username" style="-fx-background-color: transparent; -fx-text-fill: #242424; -fx-highlight-text-fill: #242424;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <font>
                        <Font name="Roboto" size="16.0" />
                     </font>
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </TextField>
               </children>
            </AnchorPane>
            <AnchorPane fx:id="passwordBackground" prefHeight="40.0" style="-fx-background-color: white; -fx-background-radius: 25; -fx-border-radius: 25;" VBox.vgrow="NEVER">
               <children>
                  <PasswordField fx:id="passwordText" onAction="#passwordAction" promptText="Password" style="-fx-background-color: white; -fx-text-fill: #242424; -fx-highlight-text-fill: #242424;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <font>
                        <Font name="Roboto" size="16.0" />
                     </font>
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </PasswordField>
               </children>
            </AnchorPane>
            <HBox alignment="CENTER" spacing="5.0" VBox.vgrow="NEVER">
               <children>
                  <Circle fx:id="loginCircle" radius="3.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0">
                     <fill>
                        <LinearGradient cycleMethod="REFLECT" endX="1.0" endY="0.1428571428571429" startY="1.0">
                           <stops>
                              <Stop color="#57ffcd" />
                              <Stop color="#74c5ff" offset="1.0" />
                           </stops>
                        </LinearGradient>
                     </fill>
                  </Circle>
                  <Circle fx:id="loginCircle1" radius="3.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0">
                     <fill>
                        <LinearGradient cycleMethod="REFLECT" endX="1.0" endY="0.1428571428571429" startY="1.0">
                           <stops>
                              <Stop color="#57ffcd" />
                              <Stop color="#74c5ff" offset="1.0" />
                           </stops>
                        </LinearGradient>
                     </fill>
                  </Circle>
                  <Circle fx:id="loginCircle2" radius="3.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0">
                     <fill>
                        <LinearGradient cycleMethod="REFLECT" endX="1.0" endY="0.1428571428571429" startY="1.0">
                           <stops>
                              <Stop color="#57ffcd" />
                              <Stop color="#74c5ff" offset="1.0" />
                           </stops>
                        </LinearGradient>
                     </fill>
                  </Circle>
               </children>
            </HBox>
            <StackPane fx:id="loginButton" onMouseClicked="#loginAction">
               <children>
                  <Rectangle fx:id="loginRectangle" arcHeight="40.0" arcWidth="40.0" height="40.0" stroke="BLACK" strokeLineCap="ROUND" strokeMiterLimit="0.0" strokeType="INSIDE" strokeWidth="0.0" width="100.0">
                     <fill>
                        <LinearGradient endX="1.0" endY="0.10952380952380958" startY="0.9476190476190476">
                           <stops>
                              <Stop color="#57ffcd" />
                              <Stop color="#74c5ff" offset="1.0" />
                           </stops>
                        </LinearGradient>
                     </fill>
                  </Rectangle>
                  <Label text="Log In" textFill="WHITE">
                     <font>
                        <Font name="Roboto Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </StackPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
